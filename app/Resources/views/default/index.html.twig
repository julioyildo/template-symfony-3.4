{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for city in city %}
                <div class="card mr-5" style="width: 18rem;">
                    <img class="card-img-top" src="/uploads/{{ city.cityImage }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ city.cityName }}</h5>
                        <p class="card-text">{{ city.cityText }}</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}
